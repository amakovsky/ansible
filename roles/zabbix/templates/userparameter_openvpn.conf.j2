UserParameter=discovery.openvpn,{{ zabbix_script_directory }}/discover_vpn.sh
UserParameter=user_status.openvpn[*], cat /etc/openvpn/openvpn-status.log | grep $1, >/dev/null && echo 1 || echo 0
UserParameter=num_user.openvpn, cat /etc/openvpn/openvpn-status.log | sed -n '/Connected Since/,/ROUTING/p' | sed -e '1d' -e '$d' | wc -l
UserParameter=user_byte_received.openvpn[*], if [ "`grep -c $1, /etc/openvpn/openvpn-status.log`" != "0" ]; then cat /etc/openvpn/openvpn-status.log | grep $1, | tr "," "\n" | sed -n '3p' ; else echo "0" ; fi
UserParameter=user_byte_sent.openvpn[*], if [ "`grep -c $1, /etc/openvpn/openvpn-status.log`" != "0" ]; then cat /etc/openvpn/openvpn-status.log | grep $1, | tr "," "\n" | sed -n '4p' ; else echo "0" ; fi

UserParameter=discovery.openvpn.ipp,sudo {{ zabbix_script_directory }}/discover_vpn_ipp.sh # for discovery with ifconfig-pool-persist