options {
	directory "/var/cache/bind";

        recursion yes;
        allow-recursion { any; };
        allow-query { any; };
        allow-query-cache { any; };
{% if list_public %}
        listen-on { 127.0.0.1; {{ ansible_eth0.ipv4.address }}; {{ ansible_eth1.ipv4.address }}; };

{% else %}
        listen-on { 127.0.0.1; {{ ansible_eth1.ipv4.address }}; };
{% endif %}

        allow-transfer { none; };

        forwarders {
                77.88.8.8;
                77.88.8.1;
        };


	dnssec-validation auto;

	auth-nxdomain no;    # conform to RFC1035
	listen-on-v6 { any; };
};

statistics-channels {
 	inet 127.0.0.1 port 8653 allow { 127.0.0.1; };
};