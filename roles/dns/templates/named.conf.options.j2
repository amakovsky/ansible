options {
	directory "/var/cache/bind";

        recursion yes;
        listen-on { 127.0.0.1; {{ ansible_eth0.ipv4.address }}; };
        allow-transfer { none; };

        forwarders {
                8.8.8.8;
                8.8.4.4;
        };


	dnssec-validation auto;

	auth-nxdomain no;    # conform to RFC1035
	listen-on-v6 { any; };
};
